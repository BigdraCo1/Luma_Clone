@page
@model alma.Pages.Events.DiscoveryEventModel

@using System.Globalization;

@{
    ViewData["Title"] = "Discover Event";
    var currentCulture = CultureInfo.CurrentCulture.Name;
}

    <section class="search-section" style="width: 100%;">
        <h1 style="color: #ffff; font-size: 28px; font-weight: bold; margin-bottom: 15px;">@Localizer["Search-Event"]
        </h1>
        <div class="search-container" style="position: relative;">
            <form method="get">
                <input type="search" name="search" placeholder=@Localizer["Search-Event"]
                    style="width: 100%; height: 40px; padding: 20px; background: transparent; border: 1px solid #8D8D8D; border-radius: 20px; font-size: 14px; color: #8D8D8D; font-weight: bold; outline: none;">
                <button type="submit" class="search-icon"
                    style="background-color: transparent; border: none; position: absolute; right: 1rem; top: 50%; transform: translateY(-50%); color: #8D8D8D; cursor: pointer;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="lucide lucide-search">
                        <circle cx="11" cy="11" r="8" />
                        <path d="m21 21-4.3-4.3" />
                    </svg>
                </button>
            </form>
        </div>
    </section>
    <section class="events-section"
        style="margin-top: 40px; padding-bottom: 40px; border-bottom: 1px solid rgba(255,255,255,0.2);">
        <div class="section-header" style="margin-bottom: 25px; display: flex; justify-content: space-between;">
            <div class="header-info">
                <h2 style="color: #ffff; font-size: 20px; font-weight: 500;">@Localizer["Popular-Event"]</h2>
            </div>
            <div class="header-btn" style="align-self: flex-end;">
                <a href="/events/View-all-Event" class="btn-seemore"
                    style="background-color: transparent; border-radius: 20px; border: 1px solid #8D8D8D; padding: 5px 10px; color: #8D8D8D; font-size: 14px; text-decoration: none;">@Localizer["View-all"]</a>
            </div>
        </div>
        <div class="event-grid">
            @foreach (var eventItem in Model.Events)
            {
                <a asp-page="Index-Event" asp-route-tuid="@eventItem.Id">
                    <div class="event-card" >
                        <img src="/events/image?id=@eventItem.Id" alt="Event image">
                        <div class="event-info"
                            style="display: flex; flex-direction: column; width: 100%; margin-top: 5px;">
                            <h3
                                style="color: #EAEAEA; font-size: 16px; font-weight: 500; margin-top: 5px; margin-bottom: 5px;">
                                @eventItem.Name</h3>
                            <span style="color: #8D8D8D;">@eventItem.StartAt.ToString("ddd MMM dd, hh:mm tt")</span>
                            <span style="color: #8D8D8D;">@eventItem.LocationSubtitle</span>
                        </div>
                    </div>
                </a>
            }
        </div>
    </section>
    <section class="events-section"
        style="margin-top: 40px; padding-bottom: 40px; border-bottom: 1px solid rgba(255,255,255,0.2);">
        <div class="section-header" style="margin-bottom: 25px; display: flex; justify-content: space-between;">
            <div class="header-info">
                <h2 style="color: #ffff; font-size: 20px; font-weight: 500;">@Localizer["Coming-soon"]</h2>
            </div>
            <div class="header-btn" style="align-self: flex-end;">
                <a href="/events/View-all-Event" class="btn-seemore"
                    style="background-color: transparent; border-radius: 20px; border: 1px solid #8D8D8D; padding: 5px 10px; color: #8D8D8D; font-size: 14px; text-decoration: none;">@Localizer["View-all"]</a>
            </div>
        </div>
        <div class="event-grid">
            @foreach (var eventItem in Model.UpcomingEvents)
            {
                <a asp-page="Index-Event" asp-route-tuid="@eventItem.Id">
                    <div class="event-card" >
                        <img src="/events/image?id=@eventItem.Id" alt="Event image">
                        <div class="event-info"
                            style="display: flex; flex-direction: column; width: 100%; margin-top: 5px;">
                            <h3
                                style="color: #EAEAEA; font-size: 16px; font-weight: 500; margin-top: 5px; margin-bottom: 5px;">
                                @eventItem.Name</h3>
                            <span style="color: #8D8D8D;">@eventItem.StartAt.ToString("ddd MMM dd, hh:mm tt")</span>
                            <span style="color: #8D8D8D;">@eventItem.LocationSubtitle</span>
                        </div>
                    </div>
                </a>
            }
        </div>
    </section>
    <section class="categories-section" style="margin-top: 40px;">
        <h2 style="color: #ffff; font-size: 20px; font-weight: 500; margin-bottom: 20px;">เลือกตามหมวดหมู่</h2>
        <div class="category-grid" >
            @foreach (var Tag in Model.Tags)
            {
                <a href="#" style="text-decoration: none;">
                    <div class="category-card">
                        <div class="icon" style="font-size: 2rem;  color: #8D8D8D;">
                            <img src="@Url.Page("/Tags/Tag-Event", "Image", new { tuid = Tag.Id })" alt="Tag"
                                style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover;">
                        </div>
                        @if (currentCulture == "th")
                        {
                            <h3 style="color: #EAEAEA; font-size: 16px; font-weight: 500; margin: 0px;">
                                @Tag.NameTH</h3>
                        }
                        else
                        {
                            <h3 style="color: #EAEAEA; font-size: 16px; font-weight: 500; margin: 0px;">
                                @Tag.NameEN</h3>
                        }
                        <p style="color: #8D8D8D; font-size: 14px;">@Tag.Events.Count Event</p>
                    </div>
                </a>
            }
        </div>
    </section>