@page
@model alma.Pages.Users.ProfileModel

@{
    ViewData["Title"] = $"Profile - {@Model.ViewingUser.Name}";
}

<div class="px-4 mx-auto max-w-240 sm:px-16">
    <div class="flex gap-8 mb-8">
        <div class="flex flex-col items-center w-24 gap-4 sm:w-48">
            <img src="@($"/users/avatar?id={Model.ViewingUser.Id}")" alt="Avatar" class="w-24 h-24 rounded-full sm:w-48 sm:h-48" />
            @if (@Model.CurrentUser != @Model.ViewingUser || true)
            {
                <div class="flex items-center sm:hidden">
                    @if (Model.CurrentUser.Following.Contains(Model.ViewingUser))
                    {
                        <button class="px-4 py-2 text-gray-300 transition-all bg-transparent border-2 border-gray-400 hover:scale-105 rounded-xl">@Localizer["Unfollow"]</button>
                    }
                    else
                    {
                        <button class="px-4 py-2 text-gray-300 transition-all bg-transparent border-2 border-gray-400 hover:scale-105 rounded-xl">@Localizer["Follow"]</button>
                    }
                </div>
            }
        </div>
        <div class="flex flex-wrap flex-grow w-40 gap-8">
            <div class="flex flex-col flex-grow w-64 gap-3 overflow-hidden">
                <h1 class="mt-0 mb-1 text-lg text-white sm:text-2xl">@Model.ViewingUser.Name</h1>
                <span class="text-gray-300 break-all">@@@Model.ViewingUser.Username</span>
                <div class="flex items-center gap-2">
                    @Icon.Inline("calendar-arrow-down", size: "20", stroke: "rgb(209 213 219)")
                    <span class="text-gray-300">@Localizer["JoinedAt"]
                        @Model.ViewingUser.CreatedAt.ToShortDateString()</span>
                </div>
                <div class="flex items-center gap-2">
                    @Icon.Inline("users", size: "20", stroke: "rgb(209 213 219)")
                    <span class="text-gray-300">@Localizer["FollowerCountPrefix"] @Model.ViewingUser.Followers.Count
                        @Localizer["FollowerCountSuffix"]</span>
                </div>
                <div class="flex items-center gap-2">
                    @Icon.Inline("ticket", size: "20", stroke: "rgb(209 213 219)")
                    <span class="text-gray-300">@Localizer["AttendingEventCountPrefix"]
                        @Model.ViewingUser.AttendingEvents.Count
                        @Localizer["AttendingEventCountSuffix"]</span>
                </div>
            </div>
            @if (@Model.CurrentUser != @Model.ViewingUser || true)
            {
                <div class="items-center hidden sm:flex">
                    @if (Model.CurrentUser.Following.Contains(Model.ViewingUser))
                    {
                        <button class="px-4 py-2 text-gray-300 transition-all bg-transparent border-2 border-gray-400 hover:scale-105 rounded-xl">@Localizer["Unfollow"]</button>
                    }
                    else
                    {
                        <button class="px-4 py-2 text-gray-300 transition-all bg-transparent border-2 border-gray-400 hover:scale-105 rounded-xl">@Localizer["Follow"]</button>
                    }
                </div>
            }
        </div>
    </div>
    <div class="flex items-center gap-2">
        <a href="https://instagram.com/@Model.ViewingUser.InstagramUsername" class="transition-all hover:scale-110">@Icon.Inline("instagram", stroke: "rgb(209 213 219)")</a>
        <a href="https://x.com/@Model.ViewingUser.TwitterUsername" class="transition-all hover:scale-110">@Icon.Inline("twitter", lib: "external", size: "24", fill: "rgb(209 213 219)")</a>
        <a href="https://youtube.com/@@@Model.ViewingUser.YoutubeUsername" class="transition-all hover:scale-110">@Icon.Inline("youtube", size: "28", stroke: "rgb(209 213 219)")</a>
        <a href="https://tiktok.com/@@@Model.ViewingUser.TikTokUsername" class="transition-all hover:scale-110">@Icon.Inline("tiktok", lib: "external", size: "22", fill: "rgb(209 213 219)")</a>
        <a href="https://linkedin.com/in/@Model.ViewingUser.LinkedinHandle" class="transition-all hover:scale-110">@Icon.Inline("linkedin", stroke: "rgb(209 213 219)")</a>
        <a href="https://@Model.ViewingUser.WebsiteUrl" class="transition-all hover:scale-110">@Icon.Inline("globe", stroke: "rgb(209 213 219)")</a>
    </div>
    <hr>
</div>